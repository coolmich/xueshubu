
<div class="modal fade" id="myModal<%= event.id %>" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 class="modal-title" id="myModalLabel"><strong><%= event.title%></strong></h3>
      </div>
      <div class="modal-body">
        <p class="light-text">When : <%= event.time %></p>
        <p class="light-text">Where : <%= event.place%></p>
        <hr>
        <%= image_tag event.event_img, :class=>'event-img' %>
        <%= simple_format(event.description) %>
      </div>
    </div>
  </div>
</div>