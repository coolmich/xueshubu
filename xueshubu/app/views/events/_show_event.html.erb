
<div class="modal fade" id="myModal<%= event.id %>" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 class="modal-title" id="myModalLabel"><strong><%= event.title%></strong></h3>
      </div>
      <div class="modal-body">
        <p class="light-text">When : <%= event.start_date%></p>
        <p class="light-text">Where : <%= event.place%></p>
        <p class="light-text">Contact : <%= event.contact%></p>
        <p class="light-text">Website : <%= link_to event.url, event.url, :target=>'_blank' %></p>
        <hr>
        <% if event.event_img? %>
          <%= image_tag event.event_img, :class=>'event-img' %> 
        <% else %>
          <%= image_tag "plane.png", :class=>'event-img' %>
        <% end %>
        <%= simple_format(event.description) %>
      </div>
    </div>
  </div>
</div>